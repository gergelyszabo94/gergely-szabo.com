---
export interface Props {
    src: string;
    title: string;
}

const { src, title } = Astro.props;
---

<div class="video-container">
    <iframe
        allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen=""
        src={src}
        title={title}
        width="560"
        height="315"
    >
    </iframe>
</div>

<style>
    .video-container {
        position: relative;
        padding-bottom: 56.25%;
        /* 16:9 */
        height: 0;
    }

    .video-container iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
</style>
