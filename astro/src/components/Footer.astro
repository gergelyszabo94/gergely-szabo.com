---
import "@fortawesome/fontawesome-free/css/fontawesome.css";
import "@fortawesome/fontawesome-free/css/brands.css";

const socialLinks = [
  {
    name: "twitter",
    href: "https://twitter.com/gergelyszabo94",
  },
  {
    name: "steam",
    href: "https://steamcommunity.com/id/gergelyszabo",
  },
  {
    name: "github",
    href: "https://github.com/gergelyszabo94",
  },
  {
    name: "mastodon",
    href: "https://mstdn.gergely-szabo.com/@gery",
  },
  {
    name: "facebook",
    href: "https://www.facebook.com/gergelyszabo1994",
  },
  {
    name: "instagram",
    href: "https://www.instagram.com/gergelyszabo94/",
  },
  {
    name: "reddit",
    href: "https://www.reddit.com/user/bladegery/",
  },
  {
    name: "youtube",
    href: "https://www.youtube.com/channel/UCkDNavvHkCFHFCZ2bmG4zzw",
  },
  {
    name: "linkedin",
    href: "https://www.linkedin.com/in/gergelyszabo1994",
  },
  {
    name: "goodreads",
    href: "https://www.goodreads.com/gergelyszabo",
  },
];
---

<footer class="text-center">
  <div class="footer-above">
    <div class="container">
      <div class="row">
        <div class="footer-col col-md-4">
          <h3>Location</h3>
          <p>Budapest, Hungary</p>
        </div>
        <div class="footer-col col-md-4">
          <h3>Around the Web</h3>
          <ul class="list-inline">
            {
              socialLinks.map((link) => (
                <li class="list-inline-item">
                  <a class="btn-social btn-outline" href={link.href}>
                    <i class={`fa-brands fa-${link.name}`} />
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
        <div class="footer-col col-md-4">
          <h3>Theme</h3>
          <p>
            The site was created by me using a modified open source Bootstrap
            theme created by
            <a href="http://startbootstrap.com">Start Bootstrap</a>, refactored
            to use <a href="https://astro.build/">Astro</a>
            and it hosted serverlessly on <a href="https://aws.amazon.com/"
              >AWS</a
            >.
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="footer-below">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          Copyright &copy; Gergely Szabo {new Date().getFullYear()}
        </div>
      </div>
    </div>
  </div>
</footer>

<!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
<div class="scroll-top d-lg-none">
  <a class="btn btn-primary js-scroll-trigger" href="#page-top">
    <i class="fa fa-chevron-up"></i>
  </a>
</div>

<style>
  .scroll-top {
    position: fixed;
    z-index: 1049;
    right: 2%;
    bottom: 2%;
    width: 50px;
    height: 50px;
  }

  .scroll-top .btn {
    font-size: 16px;
    line-height: 28px;
    width: 50px;
    height: 50px;
    text-align: center;
    border-radius: 100%;
  }

  .scroll-top .btn:focus {
    outline: none;
  }

  footer {
    color: white;
  }

  footer h3 {
    margin-bottom: 30px;
  }

  footer .footer-above {
    padding-top: 50px;
    background-color: #2c3e50;
  }

  footer .footer-col {
    margin-bottom: 50px;
  }

  footer .footer-below {
    padding: 25px 0;
    background-color: #2c3e50;
  }

  .btn-social {
    font-size: 20px;
    line-height: 45px;
    display: inline-block;
    width: 50px;
    height: 50px;
    text-align: center;
    border: 2px solid white;
    border-radius: 100%;
  }
</style>
