---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import '../styles/bootstrap.css';
import '../styles/lightbox.css';
import '../styles/gergelyszabo.css';
---

<Layout title="Gergely Szabo - Landing Page" metaDescription="Gergely Szabo's Personal Website's Landing Page!">
	<Fragment slot="custom-js">
		<script is:inline type="text/javascript" src="/js/vendor/profile.js" async defer></script>
		<script src="https://hcaptcha.com/1/api.js" async defer></script>
		<script is:inline src='/js/vendor/lightbox.js'></script>
		<script is:inline src="/js/vendor/lazyload.js"></script>

		<!-- Contact Form JavaScript -->
		<script is:inline src="/js/jqBootstrapValidation.js"></script>
		<script is:inline src="/js/contact_me.js"></script>

		<!-- Custom scripts for this template -->
		<script is:inline src="/js/background.js"></script>
	</>
	<main>
		<!--Lazyload - https://github.com/tuupola/jquery_lazyload/tree/2.x-->
		<script>
			window.addEventListener("load", function(event) {
				lazyload();
			});
		</script>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://docs.astro.build/"
				title="Documentation"
				body="Learn how Astro works and explore the official API docs."
			/>
			<Card
				href="https://astro.build/integrations/"
				title="Integrations"
				body="Supercharge your project with new frameworks and libraries."
			/>
			<Card
				href="https://astro.build/themes/"
				title="Themes"
				body="Explore a galaxy of community-built starter themes."
			/>
			<Card
				href="https://astro.build/chat/"
				title="Chat"
				body="Come say hi to our amazing Discord community. ❤️"
			/>
		</ul>
	</main>
</Layout>
