---
import Footer from '../components/Footer.astro';
import Navigation from '../components/navi/Navigation.astro';
import "bootstrap/dist/css/bootstrap.min.css"
import "../styles/general.css";

export interface Props {
	type: string;
	title: string,
	metaDescription: string,
}

const { type, title, metaDescription } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta name="description" content={metaDescription}>
		<meta name="author" content="Gergely Szabo">
		<meta name="theme-color" content="#2C3E50">
		<meta name="generator" content={Astro.generator} />
	
		<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
		<link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
	
		<!--Favicons from https://realfavicongenerator.net-->
		<link rel="apple-touch-icon" sizes="180x180" href="/img/favicon/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/img/favicon/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/img/favicon/favicon-16x16.png">
		<link rel="mask-icon" href="/img/favicon/safari-pinned-tab.svg" color="#5bbad5">
		<link rel="shortcut icon" type="image/svg+xml" href="/img/favicon/favicon.ico" />
		<meta name="msapplication-config" content="/img/favicon/browserconfig.xml">
		<link rel="icon" sizes="192x192" href="/img/favicon/android-chrome-192x192.png">
		<link rel="icon" sizes="512x512" href="/img/favicon/android-chrome-512x512.png">
	
	
		<!-- Bootstrap core JavaScript -->
		<script is:inline src="/js/vendor/jquery/jquery.min.js"></script>
		<script is:inline src="/js/vendor/popper/popper.min.js"></script>
		<script is:inline src="/js/vendor/bootstrap/bootstrap.min.js"></script>
		<script is:inline src="/js/vendor/modernizr.js"></script>
		<script is:inline src="/js/vendor/jquery-easing/jquery.easing.min.js"></script>

		<slot name="custom-js"/>
		<title>{title}</title>
	</head>
	<body id="page-top">
		<Navigation
			type={type}
		/>
		<slot />
		<Footer />
	</body>
</html>
